<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryDark">@color/app_black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryDark">@color/app_black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="HintColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="BlackAcccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#000000</item>
    </style>



</resources>

