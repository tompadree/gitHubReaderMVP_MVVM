<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/repo_detail_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/repo_detail_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/repo_detail_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/object_text_color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repo_detail_subscribers_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repo_detail_name_text_view"
            android:layout_marginTop="4dp"
            android:text="@string/subscribers"
            android:textColor="@color/object_text_color_black" />

        <!--<TextView-->
        <!--android:id="@+id/repo_detail_subscribers_number"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/repo_detail_name_text_view"-->
        <!--android:layout_marginStart="5dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:layout_toEndOf="@+id/repo_detail_subscribers_label"-->
        <!--android:textColor="@color/object_text_color_black" />-->
    </RelativeLayout>

    <View
        android:id="@+id/repo_detail_separator_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/repo_detail_relative_layout"
        android:background="@color/separator_grey" />

</RelativeLayout>