<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryDark">@color/app_black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryDark">@color/app_black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="HintColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="BlackAcccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppTheme.TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppThemeNoActionBarToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColor">@color/app_black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/app_black</item>
    </style>

</resources>

